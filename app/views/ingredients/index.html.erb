<h1>Listing Ingredients</h1>
 
<%= link_to 'New ingredient', new_ingredient_path %> | <%= link_to 'Items', items_path %> | <%= link_to 'Customers', customers_path %><br><br>

<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Price</th>
    <th>Item ID</th>
    <th colspan="5"></th>
  </tr>
 
  <% @ingredients.each do |ingredient| %>
    <tr>
      <td><%= ingredient.id %> </td>
      <td><%= ingredient.name %></td>
      <td><%= ingredient.price %> </td>
      
      <!-- Can also do ingredient.item.name -->
      <td><%= ingredient.item_id %> </td>
      <td><%= link_to 'Show', ingredient_path(ingredient) %></td>
      <td><%= link_to 'Edit', edit_ingredient_path(ingredient) %></td>
      <td><%= link_to 'Destroy', ingredient_path(ingredient), method: :delete, data: { confirm: 'Sure?' } %></td>
    </tr>
  <% end %>

</table>