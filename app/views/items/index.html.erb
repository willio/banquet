<h1>Listing Items</h1>
 
<%= link_to 'New item', new_item_path %> | <%= link_to 'Customers', customers_path %> | <%= link_to 'Ingredients', ingredients_path %><br><br>

<table>
  <tr>
    <th>Item ID</th>
    <th>Name</th>
    <th>Customer ID</th>
    <th colspan="3"></th>
  </tr>
 
  <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= item.name %></td>
      <td><%= item.customer_id %></td>
      <td><%= link_to 'Show', item_path(item) %></td>
      <td><%= link_to 'Edit', edit_item_path(item) %></td>
      <td><%= link_to 'Destroy', item_path(item), method: :delete, data: { confirm: 'Sure?' } %></td>
    </tr>
  <% end %>

